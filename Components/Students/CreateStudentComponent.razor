@using Entities
@using Business

<div>

	<EditForm Model = "oStudent">
		<div class="form-group">
			<label>Id Estudiante</label>
			<InputNumber @bind-Value="oStudent.StudentId" class="form-control"/>
		</div>
		<div class="form-group">
			<label>Nombre</label>
			<InputText @bind-Value="oStudent.StudentNombre" class="form-control"/>
		</div>
		<div class="form-group">
			<label>Apellido</label>
			<InputNumber @bind-Value="oStudent.StudentApellido" class="form-control"/>
		</div>
		<div class="form-group">
			<label>Programa</label>
			<InputText @bind-Value="oStudent.StudentPrograma" class="form-control"/>
		</div>
		<div class="form-group">
			<label>Facultad</label>
			<InputNumber @bind-Value="oStudent.StudentFacultad" class="form-control"/>
		</div>

		<input type="button" value="Agregar " @onclick="SaveStudent" />
	</EditForm>
</div>
@code {
	Students oStudent = new Students();

	private void SaveStudent()
	{
		B_Student.CreateStudent(oStudent);
	}
}
